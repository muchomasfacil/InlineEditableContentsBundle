    $( "#{{ js_dialog_var }}" ).dialog('option',
    {
        buttons: {
{% if content.collectionLength != 1 %}
          '{{ 'List' | trans({}, 'iec') }}': function () {
              customJqueryAjaxLoad('{{ path( 'mmf_iec_collection', { 'handler': content.handler,  'content_container_id': content_container_id, }) }}', undefined, '#{{ js_dialog_var }}');
          },
{% endif %}
          '{{ 'Save' | trans({}, 'iec') }}': function () {
              $("#{{ form_id }}").submit(function(event) {
                  // stop form from submitting normally
                  event.preventDefault();
                  // Send the data
                  customJqueryAjaxLoad('{{ path( 'mmf_iec_editor_form', { 'handler': content.handler,  'content_container_id': content_container_id, 'content_order': content_order }) }}', $("#{{ form_id }}").serializeArray(), '#{{ js_dialog_var }}');
              });
              $("#{{ form_id }}").submit();
          },
{% if content.collectionLength != 1 %}
          '{{ 'Save and list' | trans({}, 'iec') }}': function () {
              $("#{{ form_id }}").submit(function(event) {
                  // stop form from submitting normally
                  event.preventDefault();
                  // Send the data using post and put the results in a div
                  customJqueryAjaxLoad('{{ path( 'mmf_iec_editor_form', { 'handler': content.handler,  'content_container_id': content_container_id, 'content_order': content_order,  'action_if_success': 'list' }) }}', $("#{{ form_id }}").serializeArray(), '#{{ js_dialog_var }}');
              });
              $("#{{ form_id }}").submit();
          },
{% endif %}
          '{{ 'Save and close' | trans({}, 'iec') }}': function () {
              $("#{{ form_id }}").submit(function(event) {
                  // stop form from submitting normally
                  event.preventDefault();
                  // Send the data using post and put the results in a div
                  customJqueryAjaxLoad('{{ path( 'mmf_iec_editor_form', { 'handler': content.handler,  'content_container_id': content_container_id, 'content_order': content_order,  'action_if_success': 'close' }) }}', $("#{{ form_id }}").serializeArray(), '#{{ js_dialog_var }}');
              });
              $("#{{ form_id }}").submit();
          }
        }//buttons
    }).dialog('open');

    ]]>
